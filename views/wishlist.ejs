            </div><!-- End .container -->
        </div><!-- End .page-header -->

        <div class="page-content mt-5">
            <div class="container">
                <table class="table table-wishlist table-mobile">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Stock Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
						<% datas.forEach(data => { %>
							<tr>
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="#">
												<img src="/uploads/<%= data.product.image[0].filename %>" alt="Product image">
											</a>
										</figure>
	
										<h3 class="product-title">
											<a href="#"><%= data.product.name %> </a>
										</h3><!-- End .product-title -->
									</div><!-- End .product -->
								</td>
								<td class="price-col">â‚¹ <%= data.product.price %> </td>
								<% if(data.product.stock > 0){ %>
									<td class="stock-col"><span class="in-stock">In stock</span></td>
								<% }else{ %>
									<td class="stock-col"><span class="text-danger">Out of stock</span></td>
								<% } %>  
								
								<td class="action-col">
									<% if(data.product.stock > 0){ %>
										<button class="btn btn-block btn-outline-primary-2" onclick="addToCart('<%= data.product._id %>')"><i class="icon-cart-plus"></i>Add to Cart</button>
									<% }else{ %>
										<button class="btn btn-block btn-outline-primary-2 disabled" onclick="addToCart('<%= data.product._id %>')"><i class="icon-cart-plus"></i>Add to Cart</button>

									<% } %> 
									
								</td>
								<form action="/delete-wishlist/<%= data.product._id %>/<%= data._id %>" method="post">
									<td class="remove-col "><button class="text-danger"><i class="fa-solid fa-trash"></i></button></td>
								</form>
							</tr>
						 
						<% }) %>
                        
                    </tbody>
                </table><!-- End .table table-wishlist -->
            </div><!-- End .container -->
        </div><!-- End .page-content -->

    
        
