<%- include('../partials/admin.ejs') %> 


<%- include('../partials/admin-dashboard.ejs') %> 


  <main id="main" class="main">

    <div class="pagetitle" style="display: flex;">
      <h1>Coupons</h1>
      <a href="/admin/createCoupon" class="btn btn-success ms-auto" >Create Coupons</a>

    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
          <div class="row">


            <!-- Top Selling -->
            <div class="col-12">
              <div class="card top-selling">

                <div class="card-body pb-0">


                  <table class="table table-nowrap" style="margin-top: 6%; overflow-x: hidden;">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col" class="d-none d-sm-block">Coupon Name</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Coupon Code</th>
                            <th scope="col" class="d-none d-sm-block">Activation Date</th>
                            <th scope="col" >Expiry Date</th>
                            <th scope="col" class="d-none d-sm-block">Redemptions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(couponList){ %>

                            <% couponList.forEach((coupon,index) => { %>
                            <tr>
                                <td><p class="text-heading font-semibold"><%= index+1 %></p></td>
                                <td class="d-none d-sm-block">
                                  <p class="text-heading font-semibold">
                                    <%= coupon.couponName %>    
                                  </p> 
                              </td>
                                <td>
                                  <p class="text-heading font-semibold">
                                    â‚¹ <%= coupon.discountPrice %>  
                                </p>
                                </td>
                                  
                                  <td>
                                    <p class="text-heading font-semibold"><%= coupon.couponcode %> </p>
                                    
                                  </td>

                                  <td class="d-none d-sm-block">
                                    <p class="text-heading font-semibold">
                                      <%= couponActivationDate %>  
                                  </p>
                                  </td>

                                  <td>
                                    <p class="text-heading font-semibold">
                                      <%= couponExpiryDate %>  
                                  </p>
                                  </td>

                                  <td class="d-none d-sm-block">
                                    <p class="text-heading font-semibold ">
                                      <%= coupon.users.length %>  
                                  </p>
                                  </td>


                                  
                      
                                  
                              </tr>
                         
                        <% }) %>

                        <% } %> 
                        
                        
                    </tbody>
                </table>

                </div>

              </div>
            </div><!-- End Top Selling -->

          </div>
        </div><!-- End Left side columns -->


      </div>
    </section>

  </main><!-- End #main -->
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/chart.js/chart.min.js"></script>
  <script src="/assets/vendor/echarts/echarts.min.js"></script>
  <script src="/assets/vendor/quill/quill.min.js"></script>
  <script src="/assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="/assets/js/main.js"></script>

