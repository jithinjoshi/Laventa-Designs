                                        location.reload();
                                        return false;
                                    }, 1500);

                                } else {
                                    Swal.fire(
                                        'Error',
                                        'Something went Wrong!!',
                                        'Error'
                                    )

                                }
                            }
                        })


                    }
                })




            }
